{
  "short_name": "SCT",
  "name": "SAP CPQ Tools",
  "description": "Tools to make SAP CPQ better.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.cpq.cloud.sap/*",
        "https://*.cpq.cloud.sap/*",
        "http://*.workflow.cloud.sap/*",
        "https://*.workflow.cloud.sap/*"
      ],
      "js": [
        "./static/js/content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16":  "logo16.png",
    "48":  "logo48.png",
    "128": "logo128.png",
    "192": "logo192.png",
    "512": "logo512.png"
  }
}